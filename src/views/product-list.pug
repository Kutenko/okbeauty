include ../views/slider.pug           
.product__wrapper
    .container
        .title
            h2!= product_list_title
        .product__nav
            ul
                mixin product_nav(link, link_name)
                    li(class!=attributes.class)  
                        a(href=link)!= link_name

                +product_nav(link_1, link_name_1 )(class="active")
                +product_nav(link_1, link_name_2 )
                +product_nav(link_1, link_name_3 )
                +product_nav(link_1, link_name_4 )
                +product_nav(link_1, link_name_5 )
                +product_nav(link_1, link_name_6 )
        //end product nav
        mixin product_item( prod_id, prod_img, prod_name, prod_price )
            .product__item
                div
                    .product__image.select_prod(data-pid=prod_id)
                        img(src=prod_img, alt="")
                    .product__name.select_prod(data-pid=prod_id)
                        p!= prod_name
                    .product__item__price.add-to-cart(data-pid=prod_id data-name=prod_name data-price=prod_price)
                        p!= prod_price 
                            span!=currency
                    a.one-clk__order.add-to-cart(data-pid=prod_id data-name=prod_name data-price=prod_price)
                        span!= prod_order
        


        +product_item(pid_1_prod_id, pid_1_prod_img, pid_1_prod_name, pid_1_prod_price )
        +product_item(pid_2_prod_id, pid_2_prod_img, pid_2_prod_name, pid_2_prod_price )
        +product_item(pid_3_prod_id, pid_3_prod_img, pid_3_prod_name, pid_3_prod_price )
        +product_item(pid_4_prod_id, pid_4_prod_img, pid_4_prod_name, pid_4_prod_price )
        +product_item(pid_5_prod_id, pid_5_prod_img, pid_5_prod_name, pid_5_prod_price )
        +product_item(pid_6_prod_id, pid_6_prod_img, pid_6_prod_name, pid_6_prod_price )
        +product_item(pid_7_prod_id, pid_7_prod_img, pid_7_prod_name, pid_7_prod_price )
        +product_item(pid_8_prod_id, pid_8_prod_img, pid_8_prod_name, pid_8_prod_price )
        +product_item(pid_9_prod_id, pid_9_prod_img, pid_9_prod_name, pid_9_prod_price )
        +product_item(pid_10_prod_id, pid_10_prod_img, pid_10_prod_name, pid_10_prod_price )        
        +product_item(pid_11_prod_id, pid_11_prod_img, pid_11_prod_name, pid_11_prod_price )
        +product_item(pid_12_prod_id, pid_12_prod_img, pid_12_prod_name, pid_12_prod_price )
