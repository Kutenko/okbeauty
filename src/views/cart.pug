.title
    .container
        h2!= cart_title
form(action="" method="post")
    .cart__info
        .container
            .cart__head
                .title(uk-toggle="target: #show_cart")
                    span!= your_order
            #show_cart.show-cart
            .total__price
                span!=total_price
                |&nbsp;
                span.total-cart
                !=currency
            .clear__cart
                span!= remove_all
        //end container
