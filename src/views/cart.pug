    .container
        .cart__form 
            label(for="name")!= user_name
            input#name(type="text" name="name")

            label(for="phone")!= user_phone
            input#phone.only_number(type="text" name="phone")

            label(for="country")!= user_country
            select#country_code_selector(name="country_code")
                option(value="AE") United Arab Emirates
            button.submit.js_submit
                != submit_title
