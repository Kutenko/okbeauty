// Product page

.product__image
    .container
        img(src=prod_img_1_big , alt="")
.product__title
    .container
        span!= annotation
        h2!= product_title
.product__price
    .container
        p
            span!= product_price
            != currency
        .add_cart_button.add-to-cart(data-name=prod_name data-price=prod_price)
            span!= add_cart
        .one-clk__order.add-to-cart(data-name=prod_name data-price=prod_price)
            span(href="")!= prod_order
mixin product_item( tipe, effect, volume )
    .product__feature
        .container
            .short
                div
                    span!= tipe_title 
                    |:&nbsp;
                    != tipe
                div
                    span!= effect_title 
                    |: &nbsp;
                    != effect
                div
                    span!= volume_title 
                    |:&nbsp;
                    != volume                 

            .product__desc.box
                .title 
                    h2!= product__desc_title
                .wrapper
                    p. 
                        OK BEAUTY СOLOR SALUTE — уникальный продукт, подчеркивающий вашу естественную красоту. Универсальный оттенок 
                        MARRAKECH - это загадочный глиняно- бордовый цвет древней столицы Марокко. Подойдет на каждый день и для любого случая: 
                        в офис, на свидание, на вечеринку 
                        или прогулку
                    h3 Эффект
                    ul
                        li. 
                            Многофункциональное средство: может заменить румяна, помаду 
                            и даже тени;
                        li. 
                            Прост в нанесении — вы сможете освежить свой образ даже 
                            без зеркала и без помощи кистей;
                        li. 
                            Естественный румянец 
                            и подчеркнутые губы без эффекта «маски».
                    h3 Кому подойдет
                    p. 
                        Идеально подходит для создания естественного образа без эффекта макияжа с 
                        натуральным финишем.
            //end product description
            .ingredient.box
                .title 
                    h2!= ingredient_title
            //end product ingredient

            .how__use.box
                .title 
                    h2!= how__use_title
            //end product how__use
            
            .review.box
                .title 
                    h2!= review_title
            //end product review
+product_item(tipe_1, effect_1, volume_1 )

    
.recomend
    .product__wrapper
        .container
            .title
                h2!= recomend_title
            mixin product_item( prod_img, prod_name, prod_price )
                .product__item
                    div
                        .product__image
                            img(src=prod_img, alt="", srcset="")
                        .product__name  
                            p!= prod_name
                        .product__item__price
                            p!= prod_price 
                                span &nbsp;р
                        a.one-clk__order.add-to-cart(href="" data-name=prod_name data-price=prod_price)
                            span!= prod_order
            
            +product_item(prod_img_1, prod_name_1, prod_price_1 )
            +product_item(prod_img_2, prod_name_2, prod_price_2 ) 
            
    //end product wrapper    