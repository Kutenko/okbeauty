// Product page

mixin product_item( prod_id, prod_img, prod_name, prod_price, description, ingredient, how_use, currency)
    .product__page.uk-animation-fade.hidden(name='prod-' + prod_id)

        .product__image
            .container
                img(src=prod_img , alt="")
        .product__title
            .container
                span!= annotation
                h2!= prod_name 
        .product__price
            .container
                p
                    span!= prod_price
                    != currency
                .add_cart_button.add-to-cart(data-name=prod_name data-price=prod_price, data-currency=currency, onclick="UIkit.notification({message: 'товар добавлен в корзину', timeout: 500})")
                    span!= add_cart
                .one-clk__order.add-to-cart(data-name=prod_name data-price=prod_price, data-currency=currency)
                    span(href="")!= prod_order
        .product__feature
            .container            
                .product__desc.box
                    .title(uk-toggle="target: #desc") 
                        h2!= product__desc_title
                    #desc.wrapper!= description
                //end product description
                .ingredient.box
                    .title(uk-toggle="target: #ingrd;") 
                        h2!= ingredient_title
                    #ingrd.wrapper(hidden="")!= ingredient
                //end product ingredient

                .how__use.box
                    .title(uk-toggle="target: #huse")
                        h2!= how__use_title
                    #huse.wrapper(hidden="")!= how_use
                //end product how__use
                
                //- .review.box
                //-     .title 
                //-         h2!= review_title
                //- //end product review


